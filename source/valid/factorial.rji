kansu factorial:seisu <-
    seisu:n
{
    to < n 0 {
        tsutaeru("Factorial is undefined for negative numbers")
        kisu -1
    }
    
    to = n 0 {
        kisu 1
    }
    
    kisu * n factorial (- n 1)
}

omo:seisu 
{
    seisu n
    tsutaeru("Introduce a number (integer, please)")
    n <- uketoru   # scan functionality not yet implemented
    n <- 9
    seisu f <- factorial (n)
    tsutaeru(n "'s factorial is " f)
    to < f 1 {
        kisu -1
    } 
    kisu 0
}
